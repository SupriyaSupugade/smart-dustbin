<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/workerIcon"
        android:layout_width="@dimen/dustbin_icon"
        android:layout_height="@dimen/dustbin_icon"
        app:srcCompat="@drawable/ic_worker_assigned" />

    <TextView
        android:id="@+id/workerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_toRightOf="@id/workerIcon"
        android:text="workerName"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/list_heading" />


    <TextView
        android:id="@+id/mobileNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/workerName"
        android:text="2345678976"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/list_subheading" />

    <TextView
        android:id="@+id/workerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/workerName"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_toRightOf="@id/workerIcon"
        android:text="workerId"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/list_subheading" />


    <TextView
        android:id="@+id/areaName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workerId"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_toRightOf="@id/workerIcon"
        android:singleLine="false"
        android:text="electronic city"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/medium_grey"
        android:textSize="@dimen/list_subheading" />
</RelativeLayout>
