<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/statusColor"
        android:layout_width="@dimen/dustbin_icon"
        android:layout_height="@dimen/dustbin_icon"
        app:srcCompat= "@drawable/ic_status_filled"
    />
    <TextView
        android:id="@+id/dustbinId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_toRightOf="@+id/statusColor"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/list_heading"
        android:text="DustbinId"/>

    <TextView
        android:id="@+id/fillTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/dustbinId"
        android:layout_alignRight="@+id/dustbinId"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/list_subheading"
        android:text="9:30 AM"/>


    <TextView
        android:id="@+id/workerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_below="@+id/dustbinId"
        android:layout_toRightOf="@+id/statusColor"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/list_subheading"
        android:text="worker"/>

    <TextView
        android:id="@+id/workerMobileNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dustbinId"
        android:layout_alignEnd="@+id/workerName"
        android:layout_alignRight="@+id/workerName"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/list_subheading"
        android:text="2345678972"/>


    <TextView
        android:id="@+id/areaName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workerName"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_toRightOf="@+id/statusColor"
        android:singleLine="false"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/medium_grey"
        android:textSize="@dimen/list_subheading"
        android:text="Electronic city"/>
</RelativeLayout>
